@{
    ViewData["Title"] = "Gallery";
    string searchString = (string)ViewData["searchString"];
    List<Product> products = (List<Product>)ViewData["products"];
}

@section Css{
    <link href="~/css/productList.css" rel="stylesheet" />
}
<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">WhiteStar Shopping</p>
        </div>
    </div>
</header>
<div class="container">
    <form action="/Gallery" method="POST">
        <input class="form-control" type="text" placeholder="Search" name="searchString" value="@searchString" />

    </form>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (Product myproduct in products)

                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a asp-controller="Gallery" asp-action="@myproduct.ProductName">
                            <img class="card-img-top" src="~/Images/whitestar.jpeg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@myproduct.ProductName</h5>
                                    <!-- Product price-->
                                    $@myproduct.ProductPrice
                                </div>
                            </div></a>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to Cart</a></div>
                            </div>
                        </div>
                    </div>



                 
                }

                @if (products.Count == 0)

                {@:There are no matching product.
                }
            </div>
                </div>
    </section>
</div>